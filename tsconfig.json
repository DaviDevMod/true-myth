{
  "compilerOptions": {
    /* Basic Options */
    "target": "es2017",
    "module": "es2015",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",

    "strict": true /* Enable all strict type-checking options. */,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "baseUrl": "./",
    "paths": {
      "*": ["src/*"]
    }
  }
}
