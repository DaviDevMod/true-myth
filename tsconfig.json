{
  "compilerOptions": {
    "target": "es2017",
    "module": "umd",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",

    "strict": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["./src"],
  "typedocOptions": {
    "out": "./docs",
    "mode": "modules",
    "toc": true,
    "excludePrivate": true,
    "target": "ES6",
    "theme": "default",
    "name": "True Myth"
  }
}
