{
  "compilerOptions": {
    /* Basic Options */
    "target": "es2017",
    "module": "es2015",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",

    "strict": true /* Enable all strict type-checking options. */,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["./src"],
  "typedocOptions": {
    "out": "./docs",
    "toc": true,
    "excludePrivate": true,
    "target": "ES6",
    "theme": "default",
    "name": "True Myth"
  }
}
