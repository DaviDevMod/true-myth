{
  "name": "true-myth",
  "description": "A library for safe functional programming in JavaScript, with first-class support for TypeScript and Flow",
  "homepage": "https://chriskrycho.github.io/true-myth",
  "repository": {
    "type": "git",
    "url": "https://github.com/chriskrycho/true-myth"
  },
  "bugs": {
    "url": "https://github.com/chriskrycho/true-myth/issues"
  },
  "license": "MIT",
  "version": "0.4.0",
  "author": {
    "name": "Chris Krycho",
    "email": "chris@chriskrycho.com",
    "url": "http://www.chriskrycho.com"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "yarn run build:commonjs && yarn run build:es && yarn run build:amd",
    "build:es": "tsc -p tsconfig/es.json",
    "build:amd": "tsc -p tsconfig/amd.json",
    "build:commonjs": "tsc -p tsconfig/commonjs.json",
    "clean": "rimraf dist",
    "test": "jest",
    "doc": "./build-docs",
    "precommit": "./build-docs && git add docs",
    "version": "yarn run build"
  },
  "main": "dist/commonjs/index.js",
  "types": "dist/commonjs/index.d.ts",
  "module": "dist/es/index.js",
  "jsnext:main": "dist/es/index.js",
  "devDependencies": {
    "@types/jest": "^21.1.0",
    "husky": "^0.14.3",
    "jest": "^21.2.1",
    "prettier": "^1.7.0",
    "rimraf": "^2.6.2",
    "ts-jest": "^21.0.1",
    "tslint": "^5.7.0",
    "typedoc": "^0.8.0",
    "typescript": "2.5"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "collectCoverage": true,
    "mapCoverage": true,
    "collectCoverageFrom": [
      "src/*"
    ],
    "coveragePathIgnorePatterns": [
      "src/index.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "statements": 100,
        "lines": 100
      }
    }
  },
  "dependencies": {}
}
